<div class="map-control-element date-slider-container">
    <div class="small-button left" style="display:inline-block; vertical-align: middle; margin:0 8px;">
        <i class="fa fa-minus"></i>
    </div>
    <input class="slider"
        data-slider-min="0"
        data-slider-max={{maxIndex}}
        data-slider-step="1"
        data-slider-value={{initialIndex}}>
    <div class="small-button right" style="display:inline-block; vertical-align: middle; margin:0 8px;">
        <i class="fa fa-plus"></i>
    </div>
    <div class="date-label">{{initialDateString}}</div>
</div>
